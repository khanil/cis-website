{% import "layout/breadcrumbs.njk" as breadcrumbs %}
{% import "items/products.njk" as itemProducts %}

{% extends "layout/layout.njk" %}

{% block content %}
{{ breadcrumbs.render(["Продукция"]) }}

<div class="section section-products">
  <div class="container">
    <h1 class="h1 section-header">Продукция</h1>

    {% for category in products %}
    <div class="products-category">
      <h2 class="h2">{{ category.name }}</h2>
      <div class="row">
        {% for item in category.items %}
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          {{itemProducts.render(item)}}
        </div>
        {% endfor %}
      </div>
    </div>
    {% endfor %}
  </div>
</div>

{% include "layout/news-featured.njk" %}
{% endblock %}